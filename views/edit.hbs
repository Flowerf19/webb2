<html lang="en">
  <head>
    <link
      rel="stylesheet"
      href="https://maxcdn.bootstrapcdn.com/bootstrap/3.4.1/css/bootstrap.min.css"
    />
    <script
      src="https://ajax.googleapis.com/ajax/libs/jquery/3.5.1/jquery.min.js"
    ></script>
    <script
      src="https://maxcdn.bootstrapcdn.com/bootstrap/3.4.1/js/bootstrap.min.js"
    ></script>
    <meta charset="UTF-8" />
    <meta http-equiv="X-UA-Compatible" content="IE=edge" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Edit</title>
    <style>
      #li1 { font-size: larger; }
    </style>
  </head>

  <body>
    <div class="container-fluid p-5 bg-warning text-white text-center">
      <h1>ATN'S TOY STORE</h1>
    </div>
    <div class="container-fluid">
      <div class="row">
        <div class="col-sm-1">
          <ul class="nav">
            <li id="li1"><a
                href="/"
                class="list-group-item list-group-item-action list-group-item-danger"
              >Home</a></li>
            <li id="li1"><a
                href="/new"
                class="list-group-item list-group-item-action"
              >New Toys</a></li>
            <li id="li1"><a
                href="/view"
                class="list-group-item list-group-item-action list-group-item-danger"
              >All Toys</a></li>
          </ul>
        </div>
        <div class="col-sm-9">
          <h2 style="color: ;green">Edit product</h2>
          <form action="/edit" method="post">

            <input type="hidden" name="id" value="{{product._id}}" />
            Product Name
            <br />
            <input type="text" name="txtName" value="{{product.name}}" />
            <br />
            <br />
            Price
            <br />
            <input type="text" name="txtPrice" value="{{product.price}}" />
            <br />
            <br />
            Picture URL
            <br />
            <input type="text" name="txtPic" value="{{product.picture}}" />
            <br />
            <br />
            Amount
            <br />
            <input type="text" name="txtAmount" value="{{product.amount}}" />
            <br />
            <br />
            <input
              type="submit"
              value="Update Product"
              style="color: rgb(98, 167, 20);"
            />
          </form>

        </div>
      </div>
    </div>

    {{! <footer> }}
    {{! <p style="text-align: center; background-color:rgb(169, 170, 170) ">copy right: Flowerf</p> }}
    {{! </footer> }}
  </body>

</html>